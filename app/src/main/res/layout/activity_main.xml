<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    >

    <ImageView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
       />

    <LinearLayout
        android:id="@+id/iv_chinese_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/iv_nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/ll_desc_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_niujin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/niujin1"
            android:layout_width="@dimen/dp126"
            android:layout_height="176dp"
            android:src="@mipmap/niujin1"/>


        <ImageView
            android:id="@+id/niujin2"
            android:layout_width="@dimen/dp126"
            android:layout_height="176dp"
            android:src="@mipmap/niujin2"
            android:layout_marginStart="28dp"/>


        <ImageView
            android:id="@+id/niujin3"
            android:layout_width="@dimen/dp126"
            android:layout_height="176dp"
            android:src="@mipmap/niujin3"
            android:layout_marginStart="28dp"/>


        <ImageView
            android:id="@+id/niujin4"
            android:layout_width="@dimen/dp126"
            android:layout_height="176dp"
            android:src="@mipmap/niujin4"
            android:layout_marginStart="28dp"/>

    </LinearLayout>

</RelativeLayout>